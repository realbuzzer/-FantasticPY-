
from datetime import date
import time
    
def welcome():
    print('\nWelcome to SObitÂ© password manager')
    print('\n1: Add password')
    print('2: View password')
    print('3: RESET')
    
    choice = input('\nEnter Here : ')
    
    if choice == '1':
        AddPass()
    elif choice == '3':
        reset()       
    elif choice == '2':
        ViewPass()    
    else:
        print('\nINVALID INPUT!') 
        time.sleep(1)
        welcome()

def AddPass():
    file1 = open('asset.txt', 'a')
    print('\nAdd Password')
    global a
    a = input('\nEnter usename here : ')
    global b
    b = input('Enter password here : ')
    print('\nPASSWORD SAVED!')
    t = str(date.today())
    
    L ='\n',t,' : Username : ', a,' Password : ', b
    
    
    file1.writelines(L)
    file1.close()
    time.sleep(2)
    welcome()
    
    
def ViewPass():
    
    file = open('asset.txt', 'r')
    print(file.read())
    file.close()
    time.sleep(2)
    welcome()
    
def reset():
    file3 = open('asset.txt', 'w')
    file3.write('')
    print('Reset completed!')
    file3.close()
    time.sleep(2)
    welcome()
    
    



welcome()